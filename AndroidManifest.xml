<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vplay"
    android:versionCode="5"
    android:versionName="1.07" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="vplay_engine.VPlayApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <service android:name="vplay_engine.UsbService" >
        </service>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingActivity"
            android:label="@string/title_activity_setting"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".DeviceRegistrationActivity"
            android:label="@string/title_activity_device_registration"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".CardRegistrationActivity"
            android:label="@string/title_activity_card_registration"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".FeedMeActivity"
            android:label="@string/title_activity_feed_me"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".TreasureStartActivity"
            android:label="@string/title_activity_treasure"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".TreasureActivity"
            android:label="@string/title_activity_treasure"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".WordmakerStartActivity"
            android:label="@string/title_activity_wordmaker_start"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".WordmakerActivity"
            android:label="@string/title_activity_wordmaker"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".WordGameActivity"
            android:label="@string/title_activity_word_game" >
        </activity>
        <activity
            android:name=".WordGameStartActivity"
            android:label="@string/title_activity_word_game_start" >
        </activity>
    </application>

</manifest>
